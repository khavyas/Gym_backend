{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": false, // allow .js files
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false, // start false, tighten later
        "noImplicitAny": false
    },
    "include": [
        "src/**/*",
        "dist"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}